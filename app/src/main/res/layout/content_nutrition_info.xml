<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nutrition_info2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ictp.prayatna.nutrifinder.NutritionInfo"
    tools:showIn="@layout/activity_nutrition_info">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/replay"
        android:id="@+id/start_over"
        android:scaleType="fitXY"
        android:elevation="0dp"
        android:background="@null"
        android:onClick="startOver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/start_over"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/table_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_column="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Food Name"
                android:padding="3dip"
                android:id="@+id/viewFoodName" />

            <TextView
                android:text="Calorie"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewCalorie" />
        </TableRow>

        <TableRow>
            <TextView android:text="Serving Size"
                android:textColor="#101010" />

            <TextView

                android:text="Serving Size2"
                android:padding="3dip"
                android:id="@+id/viewWeight" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewUnit" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#131313" />
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Total Fat"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Fat amount"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewTotalFat" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:padding="3dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Saturated Fat"
                android:id="@+id/textView3"
                android:layout_column="1"
                android:textColor="#FF101010" />

            <TextView
                android:text="SFat"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewSaturatedFat" />
        </TableRow>



        <TableRow>
            <TextView android:padding="3dip" />
            <TextView
                android:text="Trans Fat"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TFAT"
                android:id="@+id/viewTransFat"
                android:gravity="right"
                android:layout_column="2"
                android:layout_span="2" />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Cholesterol"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Cholet mg"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewCholesterolAmt" />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Sodium"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Sodium mg"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewSodiumAmount" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Total Carbohydrate"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="total Carb g"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewTotalCarb" />
        </TableRow>
        <TableRow>
            <TextView android:padding="3dip" />
            <TextView
                android:text="Dietary Fiber"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DF g"
                android:id="@+id/viewDietaryFiber"
                android:gravity="right"
                android:layout_column="3" />
        </TableRow>
        <TableRow>
            <TextView android:padding="3dip" />
            <TextView
                android:text="Sugars"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sugar g"
                android:id="@+id/viewSugars"
                android:gravity="right"
                android:layout_column="3" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Protein"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="protein g"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewTotalProtein" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#131313" />

        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Vitamin A"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Vitamin A %"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewVitaminA" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Vitamin C"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Vitamin C %"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewVitaminC" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Calcium"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Calcium %"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewCalcium" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Iron"
                android:padding="3dip"
                android:textColor="#FF101010" />

            <TextView
                android:text="Iron %"
                android:gravity="right"
                android:padding="3dip"
                android:layout_column="3"
                android:id="@+id/viewIron" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#131313"
            android:id="@+id/last_line" />
    </TableLayout>
</RelativeLayout>
